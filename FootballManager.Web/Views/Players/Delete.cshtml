@model SoftServe.FootballManager.DAL.Models.Player

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Player</legend>

    <div class="display-label"><b>Name</b></div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label"><b>Age</b></div>
    <div class="display-field">@String.Format("{0:g}", Model.Age)</div>

    <div class="display-label"><b>BornCountry</b></div>
    <div class="display-field">@Model.BornCountry</div>

    <div class="display-label"><b>MainPosition</b></div>
    <div class="display-field">@Model.MainPosition</div>

    <div class="display-label"><b>Number</b></div>
    <div class="display-field">@Model.Number</div>

    <div class="display-label"><b>FootballClubId</b></div>
    <div class="display-field">@Model.ClubId</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


