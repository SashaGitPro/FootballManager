</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Club)
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.ClubId, ((IEnumerable<SoftServe.FootballManager.DAL.Models.Club>)ViewBag.PossibleClubs).Select(option => new SelectListItem
    {
        Text = (option == null ? "None" : option.Name),
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.ClubId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.Id)
</div>
