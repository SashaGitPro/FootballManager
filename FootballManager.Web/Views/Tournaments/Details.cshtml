@model SoftServe.FootballManager.DAL.Models.Tournament

@{
    ViewBag.Title = "Details";
}

<h2>Details of <em>@Model.Name</em></h2>

<fieldset>
    <legend>Tournament</legend>

    <div class="display-label"><b>Name</b></div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label"><b>Clubs</b></div>
    <div class="display-field">@(Model.Clubs == null ? "None" : Model.Clubs.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


